<div class="card mb-3 col-12 dark-gray-6">
  <div class="row g-0 rounded dark-gray-6">
    <div class="col-md-6 text-center mainCard">
      <img src=<%=@last_movie.cover_url %>>
    </div>
      <div class="col-md-6">
        <div class="card-body">
          <h5 class="card-title"><%= @last_movie.title %></h5>
          <h6 class="card-title">Diretor: <%= Director.find(@last_movie.director_id).name %></h6>
          <h6 class="card-title">Gênero: <%= MovieGenre.find(@last_movie.movie_genre_id).name %></h6>
          <h6 class="card-title">Estreia: <%= @last_movie.published_at %></h6>
          <br>
          <h6 class="card-title">Elenco: <%= @last_movie.artist_ids.map { |id| Artist.find(id).name } %></h6>
          <p class="card-text"><%= @last_movie.sinopse %></p>
        </div>
      </div>
  </div>
</div>

